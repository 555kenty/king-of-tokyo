<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Button.MainMenu" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_main_menu</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DiceImage">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/dice_background</item>
        <item name="android:foreground">@drawable/dice_selector</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>