<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0000000">

    <!-- Conteneur principal -->
    <LinearLayout
        android:id="@+id/shopContainer"
        android:layout_width="700dp"
        android:layout_height="wrap_content"
        android:background="@drawable/player_hud_background"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Barre supérieure avec l'argent -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/titleShop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BOUTIQUE"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>

                <TextView
                    android:id="@+id/playerEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginStart="6dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Conteneur des cartes -->
        <LinearLayout
            android:id="@+id/cardsContainer"
            android:layout_width="651dp"
            android:layout_height="307dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <include
                android:id="@+id/card1"
                layout="@layout/card_item" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/card2"
                layout="@layout/card_item" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/card3"
                layout="@layout/card_item" />

        </LinearLayout>

        <!-- Ligne boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buyButton"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_main_menu"
                android:text="ACHETER"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/refreshButton"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_main_menu"
                android:text="RAFRAÎCHIR (2⚡)"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/finishButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/button_main_menu"
                android:text="TERMINER"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
